@page
@model CloudComputingWeppApp.Pages.IndexModel
@{
    ViewData["Title"] = "PDF Redaction and Hashing";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: flex;
            flex-direction: row;
            gap: 20px;
            width: 90%;
            max-width: 1200px;
        }

        .form-container {
            flex: 2;
            background-color: #ffffff;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .hash-list-container {
            flex: 1;
            background-color: #ffffff;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            max-height: 600px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
        }

        h1 {
            color: #5c6bc0;
            font-size: 2rem;
            margin-bottom: 20px;
            text-align: center;
        }

        label {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
        }

        textarea, input {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            border: 2px solid #ccc;
            border-radius: 6px;
            resize: vertical;
            box-sizing: border-box;
            margin-bottom: 15px;
        }

        button {
            background-color: #5c6bc0;
            color: #fff;
            border: none;
            padding: 12px 25px;
            font-size: 1.1rem;
            border-radius: 6px;
            cursor: pointer;
            width: 100%;
            margin-top: 10px;
            margin-bottom: 15px;
        }

            button:hover {
                background-color: #3f51b5;
            }

        .alert {
            margin-top: 10px;
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 5px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }

        .hash-list-container h3 {
            font-size: 1.25rem;
            color: #0d47a1;
            margin-bottom: 10px;
        }

        .hash-list {
            padding: 10px;
            color: #0d47a1;
        }

            .hash-list ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

            .hash-list li {
                padding: 5px 0;
                border-bottom: 1px solid #ccc;
            }

                .hash-list li:last-child {
                    border-bottom: none;
                }
    </style>
</head>
<body>

    <div class="container">
        <!-- Left Form Section -->
        <div class="form-container">
            <h1>@ViewData["Title"]</h1>

            <form method="post" asp-page-handler="CreatePdf">
                <label for="inputText">Enter text:</label>
                <textarea id="inputText" asp-for="InputText" placeholder="Type your text here..."></textarea>

                <button type="submit">Create Pdf</button>
            </form>

            @if (!string.IsNullOrEmpty(Model.GeneratedHash))
            {
                <div class="alert alert-success">
                    <strong>Generated Hash:</strong> @Model.GeneratedHash
                </div>
            }

            <form method="post" asp-page-handler="GetPdfByHash">
                <label for="inputHash">Enter hash to retrieve redacted PDF:</label>
                <input type="text" id="inputHash" asp-for="InputHash" placeholder="Enter generated hash" />

                <button type="submit">Get Redacted PDF</button>
            </form>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>

        <!-- Right Hash List Section -->
        <div class="hash-list-container">
            <form method="post" asp-page-handler="GetHashList">
                <button type="submit">Retrieve PDF Hash List</button>
            </form>

            @if (Model.PdfHashedList != null && Model.PdfHashedList.Any())
            {
                <div class="hash-list">
                    <h3>Available PDF Hashes:</h3>
                    <ul>
                        @foreach (var hash in Model.PdfHashedList)
                        {
                            <li>@hash</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>

</body>
</html>
