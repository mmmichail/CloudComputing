@page
@model CloudComputingWeppApp.Pages.IndexModel
@{
    ViewData["Title"] = "PDF Redaction and Hashing";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            color: #333;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        h1 {
            color: #5c6bc0;
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-container {
            background-color: #ffffff;
            padding: 25px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
            margin-bottom: 20px; /* Add space between the forms */
        }

        label {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
        }

        textarea, input {
            width: 100%;
            padding: 12px;
            font-size: 1rem;
            border: 2px solid #ccc;
            border-radius: 6px;
            resize: vertical;
            box-sizing: border-box;
            margin-bottom: 15px;
        }

        button {
            background-color: #5c6bc0;
            color: #fff;
            border: none;
            padding: 12px 25px;
            font-size: 1.1rem;
            border-radius: 6px;
            cursor: pointer;
            width: 100%;
            margin-top: 10px;
            margin-bottom: 15px;
        }

            button:hover {
                background-color: #3f51b5;
            }

        .alert {
            margin-top: 10px;
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 5px;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
        }

        .alert-danger {
            background-color: #f8d7da;
            color: #721c24;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h1>@ViewData["Title"]</h1>

        <!-- Form for generating PDF hash or hashing text -->
        <form method="post">
            <label for="inputText">Enter text:</label>
            <textarea id="inputText" asp-for="InputText" placeholder="Type your text here..."></textarea>

            <!-- Button for generating hash for PDF -->
            <button type="submit" name="action" value="GenerateHash">Generate PDF Hash</button>

            <!-- Button for hashing the text -->
            <button type="submit" name="action" value="HashText">Hash Text</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.GeneratedHash))
        {
            <div class="alert alert-success">
                <strong>Generated Hash:</strong> @Model.GeneratedHash
            </div>
        }

        <form method="post" asp-page-handler="GetPdfByHash">
            <label for="inputHash">Enter hash to retrieve redacted PDF:</label>
            <input type="text" id="inputHash" asp-for="InputHash" placeholder="Enter generated hash" />

            <button type="submit">Get Redacted PDF</button>
        </form>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
    </div>

</body>
</html>
